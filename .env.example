# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email (Resend) - Optional, falls back to console logging
RESEND_API_KEY=your_resend_api_key

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WHATSAPP_NUMBER=27123456789

# Maps (Optional)
NEXT_PUBLIC_ENABLE_MAPS=false
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=

# =============================================================================
# iKhokha Payment Gateway
# Get your credentials from iKhokha Dashboard: https://dashboard.ikhokha.com/
# =============================================================================
IKHOKHA_APPLICATION_KEY_ID=your_application_key_id
IKHOKHA_APPLICATION_KEY_SECRET=your_application_key_secret

# iKhokha API Base URL
# Production: https://api.ikhokha.com/ikhokha-api/v1
IKHOKHA_BASE_URL=https://api.ikhokha.com/ikhokha-api/v1

# Payment callback URLs (update with your domain in production)
IKHOKHA_RETURN_URL=http://localhost:3000/api/payments/ikhokha/return
IKHOKHA_NOTIFY_URL=http://localhost:3000/api/payments/ikhokha/notify
IKHOKHA_CANCEL_URL=http://localhost:3000/api/payments/ikhokha/cancel

# =============================================================================
# Cron Jobs
# Secret key for authenticating cron job requests
# Generate with: openssl rand -hex 32
# =============================================================================
CRON_SECRET=generate_a_secure_random_string
